    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><a href="#home" data-toggle="collapse" data-target=".navbar-collapse.in">Home</a></li>
        <li><a href="#getinfo" data-toggle="collapse" data-target=".navbar-collapse.in">Name</a></li>
        <li><a href="#choose" data-toggle="collapse" data-target=".navbar-collapse.in">Choose</a></li>
        <li><a href="#play" data-toggle="collapse" data-target=".navbar-collapse.in">Play</a></li>
        <li><a href="#scores" data-toggle="collapse" data-target=".navbar-collapse.in">Scores</a></li>
        <li><a href="#about" data-toggle="collapse" data-target=".navbar-collapse.in">About</a></li>
      </ul>
    </div>
