<section id="home">
  <div class="container">
    <div class="header">
    	<div class="jumbotron">
    		<h1>Welcome to Trivia Arena!</h1>
    		<h3>Trivia Arena is an interactive quiz game where can have fun, battle your friends, and learn all at the same time!</h3>
    	</div>
    </div>
  </div>
</section>

<section id="getinfo">
  <div class="container">
    <h2>Enter Your Name</h2>
    <form class="form-inline">
      <div class="form-group">
        <label for="name">Name:</label>
          <input type="name" class="form-control" id="name" href='#'>
      </div>
    <button type="submit" class="btn btn-lg btn-default" id='submit' href='#'>Submit</button>
    </form>
  </div>
</section>

<section id="choose">
  <div class="container">
    <h2>Choose your set of terms here</h2>
    <p>
      <button type="button" class="btn btn-lg btn-default" id='set1' href='#'>Set 1</button>
      <button type="button" class="btn btn-lg btn-default" id='set2' href='#'>Set 2</button>
      <button type="button" class="btn btn-lg btn-default" id='set3' href='#'>Set 3</button>
    </p>
  </div>
</section>

<section id="play">
  <div class="container">
    <h2>Game</h2>
      <div id="game">
   			<br/>
  			<div id='quiz'></div>
    		<div class='button' id='next'><a href='#'>Next</a></div>
    		<div class='button' id='prev'><a href='#'>Prev</a></div>
    		<div class='button' id='start'><a href='#'>Start Over</a></div>
    	</div>
		<script src="styles/quiz.js"></script>
  </div>
</section>

<section id="scores">
  <div class="container">
    <h2>Scoreboard</h2>
      <div class="row">
        <div class="col-md-6">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>#</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>John</td>
                <td>Smith</td>
                <td>4321</td>
              </tr>
              <tr>
                <td>2</td>
                <td>Jack</td>
                <td>Spencer</td>
                <td>1234</td>
              </tr>
              <tr>
                <td>3</td>
                <td>Mark</td>
                <td>Twain</td>
                <td>1111</td>
              </tr>
            </tbody>
          </table>
        </div>
  </div>
</section>

